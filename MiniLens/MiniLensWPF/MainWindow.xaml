<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MiniLensWPF.MainWindow"
        Width="200" SizeToContent="Height"
        Icon="trayIcon.png" ResizeMode="CanMinimize" Title="{DynamicResource ApplicationName}" Loaded="Window_Loaded" Closing="Window_Closing" >
    <StackPanel
		HorizontalAlignment="Stretch"
		Margin="5"
            >
        <StackPanel.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="5"/>
            </Style>
        </StackPanel.Resources>
        <Button Content="Fullscreen" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="Button_Click" />
        <Button Content="Area" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="Button_Click_1" />
        <Button Content="Window" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="Button_Click_2"/>
        <Button Content="Open Picture Folder" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="Button_Click_3"/>
        <Button Content="Options" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="Button_Click_4"/>
    </StackPanel>
</Window>

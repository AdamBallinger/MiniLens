<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MiniLensWPF.MainWindow"
        Width="200" SizeToContent="Height"
        Icon="../trayIcon.png" ResizeMode="CanMinimize" Title="{DynamicResource ApplicationName}" Loaded="Window_Loaded" Closing="Window_Closing" >
    <StackPanel
		HorizontalAlignment="Stretch"
		Margin="5"
            >
        <StackPanel.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="5"/>
            </Style>
        </StackPanel.Resources>
        <Button x:Name="btn_Fullscreen" Content="Fullscreen" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="btn_Fullscreen_Click" />
        <Button x:Name="btn_Area" Content="Area" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="btn_Area_Click" />
        <Button x:Name="btn_Window" Content="Window" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="btn_Window_Click"/>
        <Button x:Name="btn_Directory" Content="Open Picture Folder" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="btn_Directory_Click"/>
        <Button x:Name="btn_Options" Content="Options" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="btn_Options_Click"/>
    </StackPanel>
</Window>
